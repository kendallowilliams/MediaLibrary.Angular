{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@media-library-workspace/media-library-data": [
        "libs/media-library-data/src/index.ts"
      ],
      "@media-library-workspace/media-library-ui": [
        "libs/media-library-ui/src/index.ts"
      ],
      "@media-library-workspace/media-library-utils": [
        "libs/media-library-utils/src/index.ts"
      ],
      "@media-library-workspace/testing-prefix": [
        "libs/testing-prefix/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
